/**app.wxss**/

page {
  margin: -5px 0 0 0;
}

.container {
  padding: 5px 0;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  font-size: 12px;
}

input {
  margin: 5px 10px;
  padding: 5px 10px;
  border-radius: 10px;
  background-color: white;
}

.header {
  z-index: 0;
}

.search {
  background-color: #fe7f9c;
  padding: 2px 0;
  display: block;
}

.btn {
  padding: 4px 8px;
  border-radius: 5px;
  color: #555;
  background: #eee;
}

.footer {
  bottom: 0;
}
